            <Font size="15.0" />
         </font></TextField>
      <Label contentDisplay="CENTER" layoutX="140.0" layoutY="80.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="90.0" prefWidth="160.0" text="Nombre del Instructor" wrapText="true">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <TextField fx:id="fechaInicioTxtF" layoutX="300.0" layoutY="220.0" prefHeight="50.0" prefWidth="200.0" promptText="Día/Mes/Año">
         <font>
            <Font size="15.0" />
         </font></TextField>
      <Label contentDisplay="CENTER" layoutX="140.0" layoutY="200.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="90.0" prefWidth="160.0" text="Fecha Inicio" wrapText="true">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <TextField fx:id="fechaFinTxtF" layoutX="300.0" layoutY="340.0" prefHeight="50.0" prefWidth="200.0" promptText="Día/Mes/Año">
