            <Font size="15.0" />
         </font></TextField>
      <Label contentDisplay="CENTER" layoutX="140.0" layoutY="320.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="90.0" prefWidth="160.0" text="Fecha Fin" wrapText="true">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <TextField fx:id="cantidadTxtF" layoutX="300.0" layoutY="460.0" prefHeight="50.0" prefWidth="200.0" promptText="Cantidad">
         <font>
            <Font size="15.0" />
         </font></TextField>
      <Label contentDisplay="CENTER" layoutX="140.0" layoutY="440.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="90.0" prefWidth="160.0" text="Cantidad de MQ" wrapText="true">
         <font>
            <Font size="25.0" />
         </font>
      </Label>
      <Button fx:id="reservarBttn" layoutX="200.0" layoutY="585.0" mnemonicParsing="false" onAction="#realizarReserva" prefHeight="50.0" prefWidth="200.0" text="Reservar" textAlignment="CENTER">
         <font>
            <Font size="25.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
